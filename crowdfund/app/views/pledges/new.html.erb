<h1>Creating New Pledge for <%= link_to(@project.name, @project) %></h1>
<%= form_for([@project, @pledge]) do |f| %>

<% unless @pledge.errors.full_messages.to_sentence.blank? %>

 <div class="alert alert-danger">
 <a href="#" class="close" data-dismiss="alert">&times;</a>
<strong><%= @pledge.errors.full_messages.to_sentence %></strong>
</div>
<%end%>
<div>
  <p>
    <%= f.label :name %> <br/>
    <%= f.text_field :name, autofocus: true, class: "form-control"%>
  </p>
   <p>
    <%= f.label :email %> <br/>
    <%= f.text_field :email, class: "form-control" %>
  </p>
     <p>
    <%= f.label :comment %> <br/>
    <%= f.text_field :comment, class: "form-control" %>
  </p>
   <p>
    <%= f.label :amount %> <br/>
    <%= f.select :amount, Pledge::AMOUNT_LEVELS, prompt: "Select amount", class: "form-control" %>
  </p>
   <p>
  	<%= f.submit class: "btn btn-success" %>
    <%= link_to "Cancel", project_path(@project), class: "btn btn-warning" %>
  </p>
<%end%>
